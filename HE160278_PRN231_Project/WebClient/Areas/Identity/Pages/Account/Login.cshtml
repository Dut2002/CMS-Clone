@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div id="page-content">
    <div id="card-login" class="card">
        <div class="card-block">
            <div class="card-body">
                <h2 class="card-header text-center">CMS - Course Management System</h2>
                <form class="mt-3" asp-action="Login" method="post" id="login">
                    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["ErrorMessage"]
                        </div>
                    }
                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button id="login-submit" type="submit" class="btn btn-primary btn-block loginbtn">Đăng nhập</button>
                    </div>
                </form>
                <div class="text-center">
                    <div class="">
                        Trình duyệt của bạn cần phải mở chức năng quản lí cookie
                    </div>
                    <h6 class="mt-2">Bạn chưa có tài khoản?</h6>
                    <div class="potentialidplist">
                        <div class="potentialidp">
                            <a asp-area="Identity" asp-page="Register" class="btn btn-secondary btn-block loginbtn" type="submit" name="provider" value="Google">
                                Đăng Ký
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
